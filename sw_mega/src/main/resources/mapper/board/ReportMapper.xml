<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pcwk.ehr.board.mapper.ReportMapper">

 <!-- 신고 등록 -->
    <insert id="doSave" parameterType="ReportDTO">
        INSERT INTO REPORT (
            REPORT_CODE,
            USER_ID,
            REASON,
            TARGET_TYPE,
            TARGET_CODE
        ) VALUES (
            RE_SEQ.NEXTVAL,
            #{userId},
            #{reason},
            #{targetType},
            #{targetCode}
        )
    </insert>

    <!-- 신고 전체 조회 -->
    <select id="doRetrieve" resultType="ReportDTO">
        SELECT
            REPORT_CODE,
            USER_ID,
            REASON,
            TARGET_TYPE,
            TARGET_CODE
        FROM REPORT
        ORDER BY REPORT_CODE DESC
    </select>

    <!-- 신고 단건 조회 -->
    <select id="doSelectOne" parameterType="int" resultType="ReportDTO">
        SELECT
            REPORT_CODE,
            USER_ID,
            REASON,
            TARGET_TYPE,
            TARGET_CODE
        FROM REPORT
        WHERE REPORT_CODE = #{reportCode}
    </select>

    <!-- 신고 삭제 -->
    <delete id="doDelete" parameterType="ReportDTO">
        DELETE FROM REPORT
        WHERE REPORT_CODE = #{reportCode}
    </delete>


        <!-- 5. 전체 건수 -->
    <select id="getCount" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM REPORT
    </select>

        <!-- 7. 전체 삭제  -->
    <delete id="deleteAll">
        DELETE FROM REPORT
    </delete>

</mapper>