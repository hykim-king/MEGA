<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pcwk.ehr.mapper.NoCommentMapper">

 <insert id="doInsert" parameterType="com.pcwk.ehr.board.domain.NoticeCommentDTO">
        INSERT INTO NO_COMMENTED (
            COMMENTED_CODE, NO_CODE, USER_ID, CONTENT, C_DT, UP_DT
        ) VALUES (
            #{commentedCode}, #{noCode}, #{userId}, #{content}, SYSDATE, SYSDATE
        )
    </insert>

    <update id="doUpdate" parameterType="com.pcwk.ehr.board.domain.NoticeCommentDTO">
        UPDATE NO_COMMENTED
        SET CONTENT = #{content},
            UP_DT = SYSDATE
        WHERE COMMENTED_CODE = #{commentedCode}
    </update>

    <delete id="doDelete" parameterType="com.pcwk.ehr.board.domain.NoticeCommentDTO">
        DELETE FROM NO_COMMENTED
        WHERE COMMENTED_CODE = #{commentedCode}
    </delete>

    <select id="doSelectOne" parameterType="com.pcwk.ehr.board.domain.NoticeCommentDTO" resultType="com.pcwk.ehr.board.domain.NoticeCommentDTO">
        SELECT * FROM NO_COMMENTED WHERE COMMENTED_CODE = #{commentedCode}
    </select>

    <select id="doRetrieve" resultType="com.pcwk.ehr.board.domain.NoticeCommentDTO">
        SELECT * FROM NO_COMMENTED WHERE NO_CODE = #{noCode}
        ORDER BY COMMENTED_CODE DESC
    </select>

</mapper>